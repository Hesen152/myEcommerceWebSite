@model Product
<div class="product product-single">
    <div class="product-thumb">
        <div class="product-label">
            <span>New</span>
            <span class="sale">-20%</span>
        </div>
        <button class="main-btn quick-view"><i class="fa fa-search-plus"></i> Quick view</button>
        <img src="~/img/@Model.ImageUrl" alt="">
    </div>
            <div class="product-body">
<h3 class="product-price">@Model.Price <del class="product-old-price">$45.00</del></h3>
                <div class="product-rating">
<i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
<i class="fa fa-star"></i>
                <i class="fa fa-star-o empty"></i>
<h2 class="product-name"><a href="#">@Model.Name</a></h2>
<div class="product-btns">
                <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                <a  asp-controller="Trading" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-warning btn-sm">Details</a>
                 @if (User.Identity.IsAuthenticated)
                 {
                     <form asp-controller="Cart" asp-action="public IActionResult AddToCart(int productId,int quantity)
" style="display:inline;" method="POST">
                         <input type="hidden" name="productId" value="@Model.ProductId">
                         <input type="hidden" name="quantity" value="1">
                         <button type="submit" class="btn btn-primary btn-sm"> Add To Cart</button>

                     </form>
                     
                 }


            </div>
        </div>
    </div> 
</div>