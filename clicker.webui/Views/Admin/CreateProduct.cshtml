@model ProductModel
@{
   Layout="~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Product Create</h1>
<hr>
 
 <div class="row">
<div class="col-md-8">
<form   asp-controller="Admin" asp-action="CreateProduct" enctype="multipart/form-data">
<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group row">
<label asp-for="Name" class="col-sm-2 col-form-label"></label>
<div class="col-sm-10">
 <input class="form-control" asp-for="Name">
<span asp-validation-for="Name" class="text-danger"></span>
</div>
</div>
<div class="form-group row">
<label asp-for="Url" class="col-sm-2 col-form-label"></label>
<div class="col-sm-10">
 <input class="form-control" asp-for="Url">
     <span asp-validation-for="Url" class="text-danger"></span>
</div>
</div>

<div class="form-group row">
<label asp-for="Description" class="col-sm-2 col-form-label"></label>
<div class="col-sm-10">
 <input class="form-control" asp-for="Description">
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
</div>


<div class="form-group row">
<label asp-for="Price" class="col-sm-2 col-form-label"></label>
<div class="col-sm-10">
 <input class="form-control" asp-for="Price">
<span asp-validation-for="Price" class="text-danger"></span>
</div>
</div>

<div class="form-group row">
<label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
<div class="col-sm-10">
 <input type="hidden" asp-for="ImageUrl">
  <img src="~img/@Model.ImageUrl" width="80">
    <input type="file" name="file">
   
</div>
</div>
<div class="form-group row">
 <div class="col-sm-10 offset-sm-2">
  <button type="submit" class="btn btn-primary" >Save Products</button>
 </div>
</div>
</form>

</div>


 </div>
