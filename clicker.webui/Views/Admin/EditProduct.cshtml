@model ProductModel
@{
   Layout="~/Views/Shared/_LayoutAdmin.cshtml";
}
<h1 class="h2">Products Edit</h1>
<hr>
<form asp-controller="Admin" asp-action="EditProduct" method="POST" enctype="multipart/form-data" >
  <div class="row">
  <div class="col-md-12">
  <div asp-validation-summary="All" class="text-danger"> </div>
  </div>
  </div>
 <div class="row">
  <div class="col-md-8">
  <input type="hidden" name="ProductId" value="@Model.ProductId">
   <div class="form-group row">
    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
     <input class="form-cotnrol" asp-for="Name">
     <span asp-validation-for="Name" class="text-danger"></span>
    </div>
   </div>
   <div class="form-group row">
    <label asp-for="Url" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
     <input class="form-cotnrol" asp-for="Url">
     <span asp-validation-for="Url" class="text-danger"></span>
    </div>
   </div>
<div class="form-group row">
    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
     <input class="form-cotnrol" asp-for="Description">
     <span asp-validation-for="Description" class="text-danger"></span>
    </div>
   </div>
<div class="form-group row">
    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
     <input class="form-cotnrol" asp-for="Price">
     <span asp-validation-for="Price" class="text-danger"></span>
    </div>
   </div>
<div class="form-group row">
    <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input type="hidden" asp-for="ImageUrl">
        <img src="~/img/@Model.ImageUrl" width="100">
        <input type="file" name="file">
    </div>
   </div>
   <div class="form-group-row">
    <div class="col-sm-19 offset-sm-2">
     <button type="submit" class="btn btn-danger">Save</button>
    </div>
   </div>
  </div>

    <div  class="col-md-4">
        @for (int i = 0; i < Model.SelectedCategories.Count; i++)
        {
         <input type="hidden" name="SelectedCategories[@i]" value="@Model.SelectedCategories[@i].CategoryId">
            <input type="hidden" name="SelectedCategories[@i].Name" value="@Model.SelectedCategories[@i].Name">
        }
        @foreach (var item in (List<Category>)ViewBag.Categories)
        {
            <div class="custom-control custom-checbox">
              <input type="checbox" class="custom-control-input" name="CategoryId" id="category_@(item.CategoryId)"
              @(Model.SelectedCategories.Any(i=>i.CategoryId==item.CategoryId)?"checked":"") >
            </div>
            
        }

         <hr>
         <div class="custom-control custom-checkbox">
             <input type="checbox" asp-for="IsApproved" class="custom-control-input">
             <label asp-for="IsApproved" class="custom-control-label"></label>

         </div>
            <div class="custom-control custom-checkbox">
             <input type="checbox" asp-for="IsApproved" class="custom-control-input">
             <label asp-for="IsHome"  class="custom-control-label"></label>
         </div>
    </div>
 </div>
</form>
