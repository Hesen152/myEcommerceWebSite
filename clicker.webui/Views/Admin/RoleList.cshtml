@model IEnumerable<IdentityRole>
@{
   Layout="~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="row" >
        <div class="col-md-12">
            <h1>Roles</h1>
               <hr> 

              <a class="btn-primary btn-sm" href="/admin/role/create">Create Role</a>
              <table class="table table-bordered mt-3">
              <thead>
                  <tr>
                      
                       <td  style="width:150px">Id</td>
                       <td>Role Name</td>
                       <td style="widht:160px"></td>   
                  </tr>
              </thead>
              <tbody>
                  @if (Model.Count()>0)
                  { 
                     
                          @foreach (var item in Model)
                          {
                              <tr>
                                  <td>@item.Id</td>
                                  <td>@item.Name</td>

                                  <td>
                                      <a href="/admin/role/@item.Id" class="btn btn-secondary btn-sm mr-2" >Edit</a>
                                      <form action="/admin/deleterole" method="POST" style="display:inline">
                                      <input type="hidden" name="RoleId" value="@item.Id">
                                      <button type="submit" class="btn btn-warning btn-sm">Delete</button>
                                       </form>
                                  </td>
                              </tr>
                              
                              
                          }                      
                  }

                   else
                   {
                     <div class="alert alert-warning">
                       <h3>No Roles</h3>
                     </div>  
                   }
              </tbody>
              </table>
        </div>
    </div>